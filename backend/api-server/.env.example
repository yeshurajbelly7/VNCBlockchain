# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/vnc_blockchain?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cashfree Configuration
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key
CASHFREE_ENVIRONMENT=PRODUCTION
CASHFREE_WEBHOOK_SECRET=your-webhook-secret

# Smart Contract Configuration
PRESALE_CONTRACT_ADDRESS=0x...
PRESALE_CONTRACT_ABI_PATH=./contracts/VNCPresale.json
NETWORK_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your-deployer-private-key

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=VNC Blockchain <noreply@vncblockchain.com>

# SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# 2FA Configuration
TWO_FACTOR_APP_NAME=VNC Blockchain

# Admin Configuration
ADMIN_EMAIL=admin@vncblockchain.com
ADMIN_PASSWORD=Admin@123456

# Frontend URL
FRONTEND_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
