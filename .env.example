# Environment Configuration
NODE_ENV=development

# API Gateway
API_PORT=3000
API_HOST=localhost
API_PREFIX=/api/v1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vnc_blockchain
DB_USER=vnc_admin
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# MongoDB (for analytics)
MONGO_URI=mongodb://localhost:27017/vnc_analytics

# Blockchain RPC
RPC_HTTP_PORT=8545
RPC_WS_PORT=8546
CHAIN_ID=2026
NETWORK_NAME=VNC-20 Mainnet

# JWT Secret
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=7d

# Wallet Integration
WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Frontend URLs
PUBLIC_WEBSITE_URL=http://localhost:3001
USER_WALLET_URL=http://localhost:3002
DEVELOPER_PORTAL_URL=http://localhost:3003
VALIDATOR_DASHBOARD_URL=http://localhost:3004
GOVERNANCE_PORTAL_URL=http://localhost:3005
ADMIN_DASHBOARD_URL=http://localhost:3006

# Blockchain Configuration
GENESIS_TIME=2025-03-01T00:00:00Z
BLOCK_TIME_MS=2500
FINALITY_TIME_MS=1000
MAX_VALIDATORS=101
MIN_VALIDATOR_STAKE=1000000

# Token Configuration
TOKEN_NAME=VNC Token
TOKEN_SYMBOL=VNC
TOKEN_DECIMALS=18
TOTAL_SUPPLY=10000000000

# Gas Configuration
MIN_GAS_PRICE=1000000000
MAX_GAS_LIMIT=30000000

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Quantum Security
PQC_ENABLED=false
QRNG_ENDPOINT=https://qrng.example.com/api

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
METRICS_PORT=9090

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@vnc20.io
SMTP_PASSWORD=your_smtp_password

# Social & Communication
DISCORD_WEBHOOK=
TELEGRAM_BOT_TOKEN=
TWITTER_API_KEY=

# Development
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Testing
TEST_MNEMONIC=test test test test test test test test test test test junk
TESTNET_FAUCET_PRIVATE_KEY=0x...

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# ENABLE_SWAGGER=false
# LOG_LEVEL=warn
