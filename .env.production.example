# VNC Blockchain - Production Environment Configuration
# ⚠️ IMPORTANT: Copy this file to .env and fill in all values before deployment
# This file contains ALL required environment variables for a fresh server start

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://vnc_admin:CHANGE_ME_SECURE_PASSWORD@localhost:5432/vnc_blockchain"

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_JWT_SECRET_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# CASHFREE PAYMENT GATEWAY (Production)
# ============================================================================
CASHFREE_APP_ID=YOUR_CASHFREE_PRODUCTION_APP_ID
CASHFREE_SECRET_KEY=YOUR_CASHFREE_PRODUCTION_SECRET_KEY
CASHFREE_API_VERSION=2023-08-01
CASHFREE_ENVIRONMENT=PRODUCTION
CASHFREE_WEBHOOK_SECRET=YOUR_CASHFREE_WEBHOOK_SECRET

# ============================================================================
# FRONTEND URLS
# ============================================================================
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://yourdomain.com/super-admin
CORS_ORIGIN=https://yourdomain.com

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=YOUR_APP_SPECIFIC_PASSWORD

# Email Sender Details
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=VNC Blockchain

# SendGrid (Alternative)
# SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# Network Details
CHAIN_ID=2026
NETWORK_NAME=VNC Blockchain Mainnet
NETWORK_RPC_URL=https://rpc.vncblockchain.com

# Smart Contract Addresses (Deploy contracts first, then add addresses here)
PRESALE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
STAKING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Contract Owner Private Key (For admin operations)
CONTRACT_OWNER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ============================================================================
# EXTERNAL RPC PROVIDERS (For Ethereum/BSC if needed)
# ============================================================================
INFURA_PROJECT_ID=YOUR_INFURA_PROJECT_ID
ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY
QUICKNODE_URL=YOUR_QUICKNODE_URL

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================
# WalletConnect
WALLET_CONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Session
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SESSION_SECRET
SESSION_MAX_AGE=86400000

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=YOUR_SENTRY_DSN_URL
SENTRY_ENVIRONMENT=production

# ============================================================================
# FILE STORAGE
# ============================================================================
# AWS S3 for KYC documents
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=ap-south-1
AWS_S3_BUCKET=vnc-blockchain-kyc

# ============================================================================
# PRESALE CONFIGURATION
# ============================================================================
PRESALE_START_DATE=2026-02-01T00:00:00Z
PRESALE_END_DATE=2026-03-31T23:59:59Z
PRESALE_HARD_CAP=100000000
PRESALE_SOFT_CAP=10000000
TOKEN_PRICE_USD=0.01
MIN_PURCHASE_USD=10
MAX_PURCHASE_USD=100000

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Super Admin Email (First user to be created)
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=CHANGE_ME_SECURE_ADMIN_PASSWORD

# ============================================================================
# API KEYS FOR EXTERNAL SERVICES
# ============================================================================
# Etherscan (for contract verification)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# CoinGecko/CoinMarketCap (for price feeds)
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================
# Automated Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vnc-blockchain-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please check back soon.

# ============================================================================
# FEATURES FLAGS
# ============================================================================
ENABLE_REFERRAL_PROGRAM=true
ENABLE_STAKING=true
ENABLE_AIRDROP=true
ENABLE_KYC=true
ENABLE_2FA=true

# ============================================================================
# NOTIFICATION CHANNELS
# ============================================================================
# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Discord
DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK_URL

# Slack
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL

# ============================================================================
# MISCELLANEOUS
# ============================================================================
# Timezone
TZ=UTC

# Debug (Set to false in production)
DEBUG=false
VERBOSE_LOGGING=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
